doctype html
html(lang="en")
	head
		include ./head.jade
body
	.container
		include ./nav.jade
		each feed in data
			div.feed(category='#{feed.category}', data-url='#{feed.url}')

				if (feed.type == 'youtube')
					iframe(src='#{feed.url}')
					if(feed.category == 'married')
						span.label.label-success marriage
					else
						span.label.label-success #{feed.category}
				else	
					h3 #{feed.title}						
						if(feed.category == 'married')
							span.label.label-success marriage
						else
							span.label.label-success #{feed.category}
					img(src=feed.thumbnail)
					p.story-description !{feed.description}
		div.text-center
			button.load-more-stories.btn.btn-default.btn-lg	Recommend more stories
